@using AppNew
@using AppNew.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@functions {
    public static string FormatPolynomial(string polynomial)
    {
        if (string.IsNullOrEmpty(polynomial) || polynomial == "0")
            return polynomial;
        
        // Заменяем x^число на x<sup>число</sup>
        var formatted = System.Text.RegularExpressions.Regex.Replace(
            polynomial, 
            @"x\^(\d+)", 
            @"x<sup>$1</sup>"
        );
        
        return formatted;
    }
}