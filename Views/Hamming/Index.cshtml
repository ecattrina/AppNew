@model AppNew.Models.HammingInputModel
@{
    ViewData["Title"] = "Обнаружение ошибок в коде Хэмминга";
}

<div class="container mt-4">
    <h2 class="mb-4">Определение номера искаженного бита в коде Хэмминга (n, k)</h2>

    <div class="card mb-4 border-info">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Алгоритм обнаружения ошибок</h5>
        </div>
        <div class="card-body">
            <p><strong>Параметры кода Хэмминга (n, k):</strong></p>
            <ul>
                <li><strong>n</strong> - общая длина кода</li>
                <li><strong>k</strong> - количество информационных битов</li>
                <li><strong>r = n - k</strong> - количество контрольных битов (битов четности)</li>
            </ul>
            <p><strong>Шаги алгоритма:</strong></p>
            <ol>
                <li>Контрольные биты располагаются на позициях, являющихся степенями двойки (1, 2, 4, 8, 16, ...)</li>
                <li>Каждый бит четности P<sub>i</sub> контролирует позиции, у которых i-й бит в двоичном представлении равен 1</li>
                <li>Для каждого бита четности вычисляется контрольная сумма (сумма по модулю 2 контролируемых битов)</li>
                <li>Формируется синдром из результатов проверки контрольных битов в порядке убывания позиций</li>
                <li>Синдром преобразуется в десятичное число - это номер позиции ошибки</li>
                <li>Ошибка исправляется инверсией бита в найденной позиции</li>
            </ol>
        </div>
    </div>

    <form asp-action="Calculate" method="post" id="hammingForm">
        @Html.AntiForgeryToken()

        <div class="card mb-4">
            <div class="card-header">
                <h5>Входные данные</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3 g-3">
                    <div class="col-12 col-md-6">
                        <label asp-for="CodeLength" class="form-label">Общая длина кода (n)</label>
                        <input asp-for="CodeLength" class="form-control" type="number" min="3" max="100" />
                        <span asp-validation-for="CodeLength" class="text-danger"></span>
                        <small class="form-text text-muted">Общее количество битов в коде</small>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="DataBits" class="form-label">Количество информационных битов (k)</label>
                        <input asp-for="DataBits" class="form-control" type="number" min="1" max="50" />
                        <span asp-validation-for="DataBits" class="text-danger"></span>
                        <small class="form-text text-muted">Количество битов данных</small>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="CodeCombination" class="form-label">Принятая кодовая комбинация</label>
                    <input asp-for="CodeCombination" class="form-control" type="text" placeholder="0001101" id="codeInput" />
                    <span asp-validation-for="CodeCombination" class="text-danger"></span>
                    <small class="form-text text-muted">Введите код из <span id="codeLengthDisplay">7</span> бит (0 и 1)</small>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3 d-flex flex-column flex-md-row gap-2">
            <button type="submit" class="btn btn-primary">Определить ошибку</button>
            <button type="button" class="btn btn-secondary" id="resetForm">Сбросить</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const codeLengthInput = document.querySelector('input[name="CodeLength"]');
            const dataBitsInput = document.querySelector('input[name="DataBits"]');
            const codeInput = document.getElementById('codeInput');
            const codeLengthDisplay = document.getElementById('codeLengthDisplay');
            
            // Обновляем максимальную длину кода при изменении CodeLength
            function updateCodeLength() {
                const codeLength = parseInt(codeLengthInput.value) || 7;
                codeLengthDisplay.textContent = codeLength;
                codeInput.maxLength = codeLength;
                
                // Обрезаем код, если он длиннее
                if (codeInput.value.length > codeLength) {
                    codeInput.value = codeInput.value.substring(0, codeLength);
                }
            }
            
            codeLengthInput.addEventListener('input', updateCodeLength);
            updateCodeLength();
            
            // Разрешаем ввод только 0 и 1
            codeInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^01]/g, '');
                const maxLength = parseInt(codeLengthInput.value) || 7;
                if (this.value.length > maxLength) {
                    this.value = this.value.substring(0, maxLength);
                }
            });

            // Ограничиваем длину
            codeInput.addEventListener('keypress', function(e) {
                const maxLength = parseInt(codeLengthInput.value) || 7;
                if (this.value.length >= maxLength && e.key !== 'Backspace' && e.key !== 'Delete') {
                    e.preventDefault();
                }
            });

            document.getElementById('resetForm').addEventListener('click', function() {
                if (confirm('Вы уверены, что хотите сбросить форму?')) {
                    codeLengthInput.value = 7;
                    dataBitsInput.value = 4;
                    codeInput.value = '0001101';
                    updateCodeLength();
                }
            });
        });
    </script>
}
